<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">

        <title>
            {{#unless isRoot}}
                {{title}} -
            {{/unless}}
            A.Yoshii Running 2015
        </title>

        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width">
        <meta name="description" content="A.Yoshii Running 2015">

        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
          ga('create', 'UA-44240223-2', 'auto');
          ga('send', 'pageview');
        </script>

        {{! styles }}
        <link href='http://fonts.googleapis.com/css?family=Lato:400,300,900' rel='stylesheet' type='text/css'>
        <link href="{{ css 'global' }}" rel="stylesheet">
    </head>

    <body class="{{ style }}">
        <div class="main-wrapper">
            {{> header }}
            {{> nav }}

            {{#if isRoot}}
                <header class="highlight-header">
                    <div class="width-limiter group">
                        {{> banner banner }}
                        {{> banner-50 }}
                    </div>
                </header>
            {{/if}}

            <div class="main-content {{#unless isRoot}}inner{{/unless}}">
                <div class="width-limiter group">
                    {{#unless isRoot}}
                        {{> banner-simple }}
                    {{/unless}}

                    {{> body }}
                </div>
            </div>

            {{> footer }}
        </div>

        {{! scripts }}
        {{#if dev}}
        <script src="http://localhost:{{ config.ports.watch }}/livereload.js"></script>
        {{/if}}

        {{#if script}}
        <script src="//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.8/require.min.js" data-main="/{{ config.scripts }}app/{{ script }}"></script>
        {{/if}}
    </body>
</html>
